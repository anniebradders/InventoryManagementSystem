<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="rootPane" stylesheets="@style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.editProductController">
   <children>
      <Pane prefHeight="200.0" prefWidth="319.0">
         <children>
         <TextField fx:id="productName" layoutX="144.0" layoutY="34.0" prefHeight="23.0" prefWidth="155.0">
               <font>
                  <Font size="10.0" />
               </font>
            </TextField>
         <TextField fx:id="productPrice" layoutX="144.0" layoutY="60.0" prefHeight="23.0" prefWidth="156.0">
               <font>
                  <Font size="10.0" />
               </font>
            </TextField>
         <TextField fx:id="productLocation" layoutX="144.0" layoutY="86.0" prefHeight="23.0" prefWidth="157.0">
               <font>
                  <Font size="10.0" />
               </font>
            </TextField>
         <TextField fx:id="StockQuantity" layoutX="144.0" layoutY="112.0" prefHeight="23.0" prefWidth="158.0">
               <font>
                  <Font size="10.0" />
               </font>
            </TextField>
            <VBox alignment="CENTER_LEFT" layoutX="16.0" layoutY="5.0" prefHeight="159.0" prefWidth="119.0">
               <children>
               <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Product Name:">
                  <font>
                     <Font name="Arial Bold" size="14.0" />
                  </font>
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
               </Text>
               <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Product Price :">
                  <font>
                     <Font name="Arial Bold" size="14.0" />
                  </font>
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
               </Text>
               <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Product Location :">
                  <font>
                     <Font name="Arial Bold" size="14.0" />
                  </font>
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
               </Text>
               <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Stock Quantity :">
                  <font>
                     <Font name="Arial Bold" size="14.0" />
                  </font>
               </Text>
               </children>
            </VBox>
         <Button fx:id="cancelButton" alignment="BOTTOM_CENTER" layoutX="129.0" layoutY="177.0" mnemonicParsing="false" onAction="#cancelButtonOnAction" prefHeight="18.0" prefWidth="51.0" style="-fx-background-color: #7445bb;" text="Cancel" textFill="WHITE">
            <font>
               <Font size="9.0" />
            </font>
         </Button>
         <Button fx:id="deleteButton" alignment="CENTER_RIGHT" layoutX="155.0" layoutY="143.0" mnemonicParsing="false" onAction="#deleteButtonOnAction" prefHeight="30.0" prefWidth="97.0" style="-fx-background-color: #FF0000;" text="Delete Product" textFill="WHITE">
            <font>
               <Font size="12.0" />
            </font>
         </Button>
         <Button fx:id="updateDetails" layoutX="56.0" layoutY="143.0" mnemonicParsing="false" onAction="#updateDetailsOnAction" prefHeight="30.0" prefWidth="94.0" style="-fx-background-color: #7445bb;" text="Update Details" textFill="WHITE">
            <font>
               <Font size="12.0" />
            </font>
         </Button>
            <Label fx:id="editLabel" layoutX="64.0" layoutY="14.0" prefHeight="17.0" prefWidth="208.0" textAlignment="CENTER" />
         </children>
      </Pane>
   </children>
</AnchorPane>
